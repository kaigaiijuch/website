<%-
  title "Description"
  content_for(:stylesheets) do
    stylesheet_link_tag 'home_index', media: 'all'
  end
  disable_annotate_rendered_view_with_filenames do
%>

<main>
  <h2>タイトル</h2>
  <button class="padding_5" onClick="navigator.clipboard.writeText(document.getElementById('title-description').value);">Copy</button>
  <textarea id="title-description" rows="1" cols="auto" readonly><%= @episode.title %></textarea>

  <h2><%= t('views.descriptions.html_for_spotify') %></h2>
  <button class="padding_5" onClick="navigator.clipboard.writeText(document.getElementById('spotify-description').value);">Copy</button>
  <textarea id="spotify-description" rows="30" cols="auto" readonly><%= render partial: 'spotify_for_podcasters_description', locals: { episode: @episode } %></textarea>

  <h2>ゲスト確認用</h2>
  <button class="padding_5" onClick="navigator.clipboard.writeText(document.getElementById('confirm-description').value);">Copy</button>
  <textarea id="confirm-description" rows="20" cols="auto" readonly><%= render partial: 'guest_confirm_description', locals: { episode: @episode } %></textarea>

  <h2>ゲスト確認用: プロフィール</h2>
  <button class="padding_5" onClick="navigator.clipboard.writeText(document.getElementById('profile-description').value);">Copy</button>
  <textarea id="profile-description" rows="15" cols="auto" readonly><%= render partial: 'guest_confirm_profile', locals: { episode: @episode } %></textarea>
</main>

<% end -%>
