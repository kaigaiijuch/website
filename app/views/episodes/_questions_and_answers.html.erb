<section >
  <hr>
  <div id="guest_info">
    <h2>ゲストQ＆A</h2>

    <% questions_and_answers.by_topic.each.with_index(1) do |(topic_name, topic_questions_and_answers), index| %>
      <h4><%= topic_name %>について</h4>
      <div class="cp_box">
        <input id="cp<%= format('%03d', index) %>" type="checkbox">
        <label for="cp<%= format('%03d', index)  %>"></label>
        <div class="cp_container">
          <div class="cp_qa">
            <dl>
              <% topic_questions_and_answers.each do |topic_questions_and_answer| %>
                <dt><%= topic_questions_and_answer.question_text %></dt>
                <dd><%= topic_questions_and_answer.answer_text %></dd>
              <% end %>
            </dl>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</section>
